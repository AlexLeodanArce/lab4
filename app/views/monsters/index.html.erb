<table border="2">
    <thead>
        <tr>
            <th>Nombre de monstruo</th>
        </tr>
    </thead>
    <tbody>
    <% @monsters.each do |monster| %>
        <tr>
            <td><%= link_to monster.name, monster %></td>
            <% if Tweet.where(monster_id: monster.id).size > 1 %>
                <td class="msj">Twittero destacado</td>
            <% end %>
        </tr>
    <% end %>
    </tbody>
</table>
